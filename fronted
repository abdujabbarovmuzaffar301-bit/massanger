<body>
    <!-- Login Screen -->
    <div id="loginScreen" class="auth-container">
        <div class="auth-box">
            <div class="auth-header">
                <svg fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20 2H4c-1.1 0-2 .9-2 2v18l4-4h14c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2z"/>
                </svg>
                <h1>Web Messenger</h1>
            </div>
            <div id="loginError" class="error-message hidden"></div>
            <div class="input-group">
                <input type="text" id="loginUsername" placeholder="Username">
            </div>
            <div class="input-group">
                <input type="password" id="loginPassword" placeholder="Parol">
            </div>
            <button class="btn btn-primary" onclick="login()">Kirish</button>
            <button class="btn btn-secondary" onclick="showRegister()">Ro'yxatdan o'tish</button>
        </div>
    </div>

    <!-- Register Screen -->
    <div id="registerScreen" class="auth-container hidden">
        <div class="auth-box">
            <div class="auth-header">
                <h1>Ro'yxatdan o'tish</h1>
            </div>
            <div id="registerError" class="error-message hidden"></div>
            <div class="input-group">
                <input type="text" id="registerUsername" placeholder="Username (noyob)">
            </div>
            <div class="input-group">
                <input type="password" id="registerPassword" placeholder="Parol">
            </div>
            <button class="btn btn-primary" onclick="register()">Ro'yxatdan o'tish</button>
            <button class="btn btn-secondary" onclick="showLogin()">Orqaga</button>
        </div>
    </div>

    <!-- Chat Screen -->
    <div id="chatScreen" class="chat-container">
        <div class="chat-layout">
            <!-- Sidebar -->
            <div class="sidebar">
                <div class="sidebar-header">
                    <div class="user-info">
                        <span id="currentUsername"></span>
                        <button class="logout-btn" onclick="logout()">Chiqish</button>
                    </div>
                    <div class="search-box">
                        <svg fill="currentColor" viewBox="0 0 24 24">
                            <path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"/>
                        </svg>
                        <input type="text" id="searchUsers" placeholder="Qidirish..." oninput="filterUsers()">
                    </div>
                </div>
                <div id="usersList" class="users-list"></div>
            </div>

            <!-- Chat Area -->
            <div class="chat-area">
                <div id="chatEmpty" class="chat-empty">
                    <svg fill="currentColor" viewBox="0 0 24 24">
                        <path d="M20 2H4c-1.1 0-2 .9-2 2v18l4-4h14c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2z"/>
                    </svg>
                    <p>Suhbatni boshlash uchun foydalanuvchini tanlang</p>
                </div>
                <div id="chatActive" class="hidden" style="display: flex; flex-direction: column; flex: 1;">
                    <div class="chat-header">
                        <div class="user-avatar" id="chatAvatar"></div>
                        <div class="user-name" id="chatUsername"></div>
                    </div>
                    <div id="messagesArea" class="messages-area"></div>
                    <div class="input-area">
                        <input type="text" id="messageInput" placeholder="Xabar yozing..." onkeypress="if(event.key==='Enter') sendMessage()">
                        <button class="send-btn" onclick="sendMessage()">
                            <svg fill="currentColor" viewBox="0 0 24 24">
                                <path d="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z"/>
                            </svg>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // O'zingizning PythonAnywhere URL ini qo'ying
        const API_URL = 'https://muzaffar12.pythonanywhere.com';
        
        let currentUser = null;
        let selectedUser = null;
        let allUsers = [];
        let messageInterval = null;

        // Show/Hide screens
        function showLogin() {
            document.getElementById('loginScreen').classList.remove('hidden');
            document.getElementById('registerScreen').classList.add('hidden');
            document.getElementById('loginError').classList.add('hidden');
        }

        function showRegister() {
            document.getElementById('loginScreen').classList.add('hidden');
            document.getElementById('registerScreen').classList.remove('hidden');
            document.getElementById('registerError').classList.add('hidden');
        }

        function showChat() {
            document.getElementById('loginScreen').classList.add('hidden');
            document.getElementById('registerScreen').classList.add('hidden');
            document.getElementById('chatScreen').style.display = 'block';
            document.getElementById('currentUsername').textContent = currentUser.username;
            loadUsers();
        }

        // Register
        async function register() {
            const username = document.getElementById('registerUsername').value.trim();
            const password = document.getElementById('registerPassword').value.trim();
            const errorDiv = document.getElementById('registerError');

            if (!username || !password) {
                errorDiv.textContent = 'Username va parol to\'ldirilishi shart';
                errorDiv.classList.remove('hidden');
                return;
            }

            try {
                const response = await fetch(`${API_URL}/api/register`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ username, password })
                });

                const data = await response.json();

                if (response.ok) {
                    currentUser = { username, token: data.token };
                    showChat();
                } else {
                    errorDiv.textContent = data.error || 'Ro\'yxatdan o\'tishda xatolik';
                    errorDiv.classList.remove('hidden');
                }
            } catch (error) {
                errorDiv.textContent = 'Server bilan bog\'lanishda xatolik';
                errorDiv.classList.remove('hidden');
            }
        }

        // Login
        async function login() {
            const username = document.getElementById('loginUsername').value.trim();
            const password = document.getElementById('loginPassword').value.trim();
            const errorDiv = document.getElementById('loginError');

            if (!username || !password) {
                errorDiv.textContent = 'Username va parol to\'ldirilishi shart';
                errorDiv.classList.remove('hidden');
                return;
            }

            try {
                const response = await fetch(`${API_URL}/api/login`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ username, password })
                });

                const data = await response.json();

                if (response.ok) {
                    currentUser = { username, token: data.token };
                    showChat();
                } else {
                    errorDiv.textContent = data.error || 'Kirish xato';
                    errorDiv.classList.remove('hidden');
                }
            } catch (error) {
                errorDiv.textContent = 'Server bilan bog\'lanishda xatolik';
                errorDiv.classList.remove('hidden');
            }
        }

        // Logout
        function logout() {
            currentUser = null;
            selectedUser = null;
            clearInterval(messageInterval);
            showLogin();
        }

        // Load users
        async function loadUsers() {
            try {
                const response = await fetch(`${API_URL}/api/users`, {
                    headers: { 'Authorization': `Bearer ${currentUser.token}` }
                });
                const data = await response.json();
                allUsers = data.users.filter(u => u !== currentUser.username);
                renderUsers();
            } catch (error) {
                console.error('Foydalanuvchilarni yuklashda xatolik');
            }
        }

        // Render users
        function renderUsers() {
            const searchQuery = document.getElementById('searchUsers').value.toLowerCase();
            const filteredUsers = allUsers.filter(u => u.toLowerCase().includes(searchQuery));
            
            const usersList = document.getElementById('usersList');
            
            if (filteredUsers.length === 0) {
                usersList.innerHTML = '<div class="empty-state">Foydalanuvchilar topilmadi</div>';
                return;
            }

            usersList.innerHTML = filteredUsers.map(user => `
                <div class="user-item ${selectedUser?.username === user ? 'active' : ''}" onclick="selectUser('${user}')">
                    <div class="user-avatar">${user[0].toUpperCase()}</div>
                    <div class="user-name">${user}</div>
                </div>
            `).join('');
        }

        // Filter users
        function filterUsers() {
            renderUsers();
        }

        // Select user
        function selectUser(username) {
            selectedUser = { username };
            renderUsers();
            
            document.getElementById('chatEmpty').classList.add('hidden');
            document.getElementById('chatActive').style.display = 'flex';
            document.getElementById('chatAvatar').textContent = username[0].toUpperCase();
            document.getElementById('chatUsername').textContent = username;
            
            loadMessages();
            clearInterval(messageInterval);
            messageInterval = setInterval(loadMessages, 2000);
        }

        // Load messages
        async function loadMessages() {
            if (!selectedUser) return;

            try {
                const response = await fetch(`${API_URL}/api/messages/${selectedUser.username}`, {
                    headers: { 'Authorization': `Bearer ${currentUser.token}` }
                });
                const data = await response.json();
                renderMessages(data.messages || []);
            } catch (error) {
                console.error('Xabarlarni yuklashda xatolik');
            }
        }

        // Render messages
        function renderMessages(messages) {
            const messagesArea = document.getElementById('messagesArea');
            messagesArea.innerHTML = messages.map(msg => {
                const isSent = msg.from_user === currentUser.username;
                const time = new Date(msg.timestamp).toLocaleTimeString('uz-UZ', { 
                    hour: '2-digit', 
                    minute: '2-digit' 
                });
                
                return `
                    <div class="message ${isSent ? 'sent' : 'received'}">
                        <div class="message-bubble">
                            <div>${msg.message}</div>
                            <div class="message-time">${time}</div>
                        </div>
                    </div>
                `;
            }).join('');
            
            messagesArea.scrollTop = messagesArea.scrollHeight;
        }

        // Send message
        async function sendMessage() {
            const input = document.getElementById('messageInput');
            const message = input.value.trim();
            
            if (!message || !selectedUser) return;

            try {
                const response = await fetch(`${API_URL}/api/send`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${currentUser.token}`
                    },
                    body: JSON.stringify({
                        to_user: selectedUser.username,
                        message: message
                    })
                });

                if (response.ok) {
                    input.value = '';
                    loadMessages();
                }
            } catch (error) {
                console.error('Xabar yuborishda xatolik');
            }
        }
    </script>
</body>
</html>
